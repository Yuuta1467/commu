<% @posts.each do |post| %>
  <div class="d-flex align-items-center border-bottom mt-2">
    <div>
      <%= post.created_at.strftime('%Y/%m/%d') %>
    </div>
    <div class="col-sm-4"><%= post.content %></div>
    <div class="sentiment-score mr-4">感情分析スコア[<%= post.score %>]</div>
    <div class="mr-4"><%= post.tag.name %></div>
    <div>
      <%= link_to "削除", admin_post_path(post), method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>
