<div class="container">
  <div class="row">
    <div class="col-md-3 text-center">
      <div class="bg-light mt-3">
        <h3>投稿詳細ページ</h3>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="d-flex align-items-center border-bottom mt-2 col-md-11">
      <%= image_tag @post.user.get_profile_image, size: "100x100" %>
      <div class="col-sm-2"><%= @post.user.name %></div>
      <div class="col-sm-5"><%= @post.content %></div>
      <div class="col-sm-2"><%= @post.tag.name %></div>
      <div class="col-sm-2">
        <%= link_to "投稿一覧へ", posts_path %>
      </div>
    </div>
  </div>
</div>
