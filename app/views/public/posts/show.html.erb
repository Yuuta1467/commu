<div class="container">
  <div class="row">
    <div class="col-md-3 text-center">
      <div class="bg-light mt-3">
        <h3>投稿詳細ページ</h3>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="d-flex align-items-center border-bottom mt-2 col-md-12">
      <%= image_tag @post.user.get_profile_image, size: "100x100" %>
      <div class="col-sm-2"><%= @post.user.name %></div>
      <div class="col-sm-4"><%= @post.content %></div>
      <div class="col-sm-2"><%= @post.tag.name %></div>
      <div class="col-sm-2">
        <%= link_to "投稿一覧へ", posts_path %><br>
        <%= link_to "投稿編集へ", edit_post_path(@post) %>
      </div>
      <div class="actions col-md-2 mt-1">
        <%= link_to "投稿削除", post_path, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
