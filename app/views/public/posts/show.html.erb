<div class="container">

  <div class="row">
    <h4 class="text-primary">
      <%= render "public/shared/success_messages" %>
    </h4>
  </div>

  <div class="row">
    <div class="col-md-3 text-center">
      <div class="mt-3">
        <h3>投稿詳細ページ</h3>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="d-flex align-items-center border-bottom mt-2 col-md-12">
      <%= image_pack_tag @post.user.get_profile_image, size: "100x100" %>
      <div class="col-sm-1"><%= @post.user.name %></div>
      <div class="col-sm-2"><%= @post.created_at.strftime('%Y/%m/%d') %></div>
      <div class="col-sm-4"><%= @post.content %></div>
      <div class="col-sm-1"><%= @post.tag.name %></div>
      <div class="col-sm-2">
        <div id="post_<%= @post.id %>"><%= render "public/favorites/btn", post: @post %></div>
        <%= link_to "投稿一覧へ", posts_path %><br>
        <%= link_to "投稿編集へ", edit_post_path(@post) %>
      </div>
      <div class="actions col-md-2 mt-1">
        <%= link_to "投稿削除", post_path, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>

    <div class="col-sm-3 mt-2">コメント件数 :<%= @post.post_comments.count %></div>
　  <% @post.post_comments.each do |post_comment| %>
    <div class="d-flex align-items-center col-md-12 mt-2">
      <div class="col-sm-1">
        <%= image_pack_tag post_comment.user.get_profile_image, size: "50x50" %>
      </div>
      <div class="col-sm-1"><%= post_comment.user.name %></div>
      <div class="col-sm-2">
        <%= post_comment.created_at.strftime('%Y/%m/%d') %>
      </div>
      <div class="col-sm-4"><%= post_comment.comment %></div>
      <div class="col-sm-2">
        <div id="post_comment_<%= post_comment.id %>"><%= render "public/likes/like", post_comment: post_comment %></div>
        <%= link_to "コメント編集へ", edit_post_post_comment_path(post_comment.post,post_comment) %>
      </div>
      <div class="col-sm-2">
      　<%= link_to "コメント削除", post_post_comment_path(post_comment.post,post_comment), method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
    <% end %>

  <div class="row mt-3">
    <div class="d-flex align-items-center col-md-7 offset-md-2">
    <%= form_with model: [@post, @post_comment], local: false do |f| %>
      <%= f.text_area :comment, size: "40x4", placeholder: "コメントをここに" %>
      <div class="actions text-right mt-2 mb-2">
        <%= f.submit "送信する", class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
