 <% posts.each do |post| %>
  <div class="card mb-3 col-md-11">
    <div class="card-header mx-0" style="background-color: rgb(250, 250, 150);">
      <div class="d-flex align-items-center">
        <%= link_to post_path(post) do %>
          <%= image_tag post.user.get_profile_image, size: "50x50" %>
        <% end %>

        <div class="mb-0 ml-0 mt-3">
          <p>　<%= post.user.name %>
             ・<%= post.user.helper_type %>
             ・<%= post.tag.name %>
             ・<%= post.created_at.strftime('%Y/%m/%d') %></p>
        </div>
      </div>

    </div>
    <div class="card-body d-flex align-items-center">
      <p class="card-text col-sm-9"><%= post.content %></p>
<span class="sentiment-score">本文の感情分析スコア<%= post.score %></span>

      <div class="col-sm-2">
        <div id="favorite_buttons_<%= post.id %>">
          <%= render "public/favorites/btn", post: post %>
        </div>
        <%= link_to "投稿詳細へ", post_path(post) %>
      </div>
    </div>
  </div>
  <% end %>