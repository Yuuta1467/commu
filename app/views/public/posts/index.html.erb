<div class="container">

  <div class="row">
    <h4 class="text-primary">
      <%= render "public/shared/success_messages" %>
    </h4>
  </div>

  <div class="row mb-2">
    <div class="col-sm-12">
      <%= render 'public/posts/keyword_form' %>
      <%= render 'public/posts/tag_form' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2 text-center mt-3">
      <h3>投稿一覧</h3>
    </div>

  <% @posts.each do |post| %>
    <div class="card mb-3 col-md-11">
      <div class="card-header mx-0" style="background-color: rgb(250, 250, 150);">
        <div class="d-flex align-items-center">
          <%= link_to post_path(post) do %>
            <%= image_tag post.user.get_profile_image, size: "50x50" %>
          <% end %>

          <div class="mb-0 ml-0 mt-3">
            <p>　<%= post.user.name %>
            ・タイプ : <%= post.user.helper_type %>
            ・タグ : <%= post.tag.name %>
            ・投稿日時 : <%= post.created_at.strftime('%Y/%m/%d') %></p>
          </div>
        </div>
      </div>

      <div class="card-body d-flex align-items-center">
        <p class="card-text col-sm-9"><%= post.content %></p>
        <div class="col-sm-2">
          <div id="favorite_buttons_<%= post.id %>">
            <%= render "public/favorites/btn", post: post %>
          </div>
          <%= link_to "投稿詳細へ", post_path(post) %>
        </div>
      </div>
    </div>
  <% end %>
    <!--%= paginate @posts%-->
    <!--ページネーション-->
  </div>
</div>