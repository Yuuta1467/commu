<div class="container">
  <div class="row">

    <div class="col-md-3 text-center bg-light mt-3 col align-self-start">
      <h3 >新規投稿画面</h3>
    </div>

    <div class="col-md-8">
    <%= form_with model: @post do |f| %>
      <div class="field mt-5 ">
        <%= f.label :"投稿記入欄", class: "col-sm-3 d-flex align-items-start" %>
        <%= f.text_area :content, size: "50x4" %>
      </div>

      <div class="actions text-center mt-2">
        <%= f.submit "新規投稿", class: "btn btn-success" %>
      </div>
　　<% end %>
    </div>

  </div>
</div>