<% @posts.each do |post| %>
  <div class="d-flex align-items-center border-bottom mt-2">
    <div class="col-sm-2">
      <%= post.created_at.strftime('%Y/%m/%d') %>
    </div>
    <div class="col-sm-3"><%= post.content %></div>
    <div class="sentiment-score col-sm-4">感情分析スコア[<%= post.score %>]</div>
    <div class="col-sm-2"><%= post.tag.name %></div>
    <div class="col-sm-2">
      <%= link_to "削除", post_path(post), method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>