　  <% post.post_comments.each do |post_comment| %>
    <div class="d-flex align-items-center col-md-12 mt-2">
      <div class="col-sm-1">
        <%= image_tag post_comment.user.get_profile_image, size: "50x50" %>
      </div>
      <div class="col-sm-1"><%= post_comment.user.name %></div>
      <div class="col-sm-2">
        <%= post_comment.created_at.strftime('%Y/%m/%d') %>
      </div>
      <div class="col-sm-4"><%= post_comment.comment %></div>
      <div class="col-sm-2">
        <%= render "public/likes/like", post_comment: post_comment %><br>
        <%= link_to "コメント編集へ", edit_post_post_comment_path(post_comment.post,post_comment) %>
      </div>
      <div class="col-sm-2">
      　<%= link_to "コメント削除", post_post_comment_path(post_comment.post,post_comment), method: :delete, remote: true, class: "btn btn-danger" %>
      </div>
    </div>
    <% end %>
