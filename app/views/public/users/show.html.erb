<div class="container">
  <div class="row">
    <h4 class="text-primary">
      <%= render "public/shared/success_messages" %>
    </h4>
  </div>

  <div class="row">
    <div class="col-sm-2 text-center">
      <div class="mt-3">
        <h3>マイページ</h3>
      </div>
    </div>

    <div class="col-sm-10">
      <div class="d-flex mt-3">
        <h4>登録情報</h4>
        <%= link_to "編集する", edit_user_path(@user), class: "btn mx-sm-4 btn-success ml-1" %>
      </div>

      <div class="field border-bottom mt-2 col-sm-6">
        <p>プロフィール画像</p>
        <%= image_tag @user.get_profile_image, size:'100x100' %>
      </div>

      <div class="d-flex border-bottom mt-2 col-sm-6">
        <p class= "col-sm-8">ニックネーム</p>
        <p><%= @user.name %></p>
      </div>

      <div class="d-flex border-bottom mt-2 col-sm-6">
        <p class= "col-sm-8">自己紹介</p>
        <p><%= @user.introduction %></p>
      </div>

      <div class="d-flex border-bottom mt-2 col-sm-6">
        <p class= "col-sm-8">ユーザータイプ</p>
        <p><%= @user.helper_type %></p>
      </div>

      <div class="d-flex mt-2">
        <p><%=link_to"お気に入り投稿一覧へ",favorites_user_path(@user) %></p>
      </div>

      <div class="text-right">
     　　<%= image_tag asset_path("23867223.jpg"), size:'140x100' %>
    　</div>
  　</div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-5 my-3 offset-1">

      <div class="text-center">
        <p>投稿一覧</p>
      </div>

      <%= render 'public/posts/index2',posts: @posts %>
    </div>

    <div class="col-sm-5 my-3">

      <div class="text-center">
        <p>コメント一覧</p>
      </div>

      <%= render 'public/post_comments/index2',post_comments: @post_comments %>
    </div>
  </div>
</div>
