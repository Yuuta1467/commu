<div class= "container">
  <div class="row">
    <div class="col-md-3 text-center">
      <h2>新規会員登録</h2>
    </div>
    <div class="col-md-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="row d-flex mt-2">
        <%= f.label :"ニックネーム", class: "col-sm-4" %>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="row d-flex mt-2">
        <%= f.label :"メールアドレス",class: "col-sm-4" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="row d-flex mt-2">
        <%= f.label :"パスワード(6文字以上)", class: "col-sm-4 control-label" %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="row d-flex mt-2">
        <%= f.label :"パスワード（確認用）",class: "col-sm-4" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions text-center mt-2">
        <%= f.submit "新規会員登録",class: "btn btn-success" %>
      </div>
     <% end %>
    </div>

     <div class="col-md-3 text-center mt-2">
      <h4>すでに登録済みの方</h4>
     </div>
     <div class="form-inline">
       <%= render "public/shared/links" %>　からログインしてください。
     </div>
  </div>
</div>
