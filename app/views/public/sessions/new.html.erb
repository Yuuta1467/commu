<div class= "container">
  <div class="row">
    <div class="col-md-2 text-center">
      <h2 class="bg-light">ログイン</h2>
    </div>
    <div class="col-md-12">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label "メールアドレス", class: "col-sm-3" %>
        <%= f.email_field :email, autofocus: true, size:40, autocomplete: "email" %>
     </div>

     <div class="field">
       <%= f.label "パスワード", class: "col-sm-3" %>
       <%= f.password_field :password, size:40, autocomplete: "current-password" %>
     </div>

       <!--% if devise_mapping.rememberable? %-->
     <!--div class="field"-->
       <!--%= f.check_box :remember_me %-->
       <!--%= f.label :remember_me %-->
     <!--/div-->
       <!--% end %-->

     <div class="actions text-center">
       <%= f.submit "ログイン",class:"btn btn-primary" %>
     </div>
     <% end %>
     <div class="col-md-4 text-center">
      <h4 class="bg-light">新規会員登録がまだの方</h4>
     </div>
      <%= render "public/shared/links" %>から新規会員登録をお願いします。
    </div>
  </div>
</div>
